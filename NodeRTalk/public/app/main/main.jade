.container
  form(name='form')
    .panel.panel-primary
      .panel-heading
        h1.panel-title RTalk
          small.panel-sub-title   anonymous bulletin
          span.glyphicon.glyphicon-refresh.pull-right.clickable.v-m(ng-click='getListOnTime()', title='Refresh list right now!!!')
          timer.panel-title-info.pull-right.v-m(countdown="1", interval="1000", finish-callback='getListOnTime()') Update in {{countdown}}s.&nbsp;&nbsp;
      .panel-body
        .panel
          .input-group
            input.form-control(type='text', name='message', ng-model='msg', ng-minlength="1", ng-maxlength="100", ng-keyup='$event.keyCode==13 && saveContents()', placeholder='하고 싶은 말을 자유롭게 작성해주세요~^^', ng-required="true", autofocus="true")
            span.input-group-btn
              button.btn.btn-default(type='button', ng-click='saveContents()') 전송
        .panel
          .row
            .col-sm-6.col-md-4(ng-repeat='top in contentsList.topn')
              .thumbnail
                .caption
                  table.w-100
                    tr
                      td
                        span {{top.t}}
                        br
                        span.font-7 {{top.wt}}
                      td.w-10
                        span.badge {{top.l}}
                      td.w-10
                        span.glyphicon.glyphicon-thumbs-up.btn-lg.clickable(ng-click='likeContents(top)')
        .panel.panel-info
          table.table
            tr(ng-repeat='contents in contentsList.list')
              td
                span {{contents.t}}
                br
                span.font-7 {{contents.wt}}
              td.w-5.v-m
                span.badge.pull-right {{contents.l}}
              td.w-5.v-m
                span.glyphicon.glyphicon-thumbs-up.btn-lg.clickable(ng-click='likeContents(contents)')
